<h1>Articles Listing Page</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= link_to 'Show', article_path(a) %></td>
        <td><%= link_to 'Edit', edit_article_path(a) %></td>
        <td><%= button_to "Delete", a, method: :delete, onclick: "return confirm('Are you sure?')"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new article', new_article_path %></p>