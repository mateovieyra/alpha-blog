<div class="container">
  
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f|%>
        <div class="row mb-3">
          <%= f.label :title, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>